!!!
%html
	%head
		%title Myapp
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		-#Navbar Layout
		= render partial: './main/navbar'
		
		-#Page Layout
		.container
			= yield
		-#.row
			.col.s3{:style => "border-style:solid"}
				= "SideBar"
			
			.col.s9{:style => "border-style:solid"}
				= yield
		
		- if user_signed_in?
			= link_to "Log out", destroy_user_session_path, method: :delete
			
		-else 
			= link_to "<i class=\"fa fa-facebook\" style=\"padding-right:5px\"></i>Log in with Facebook".html_safe, user_omniauth_authorize_path(:facebook)
		