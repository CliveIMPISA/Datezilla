= simple_form_for @interest, html: { multipart: true, id: "postSubmitForm"} do |f|
	- 	if @interest.errors.any?
		#errors
			%h2
			= pluralize(@interest.errors.count, "error") #for errors presentation
			prevented this Interest from saving
			%ul
				-	@interest.errors.full_messages.each do |msg|
					%li=msg

	.form-group
		= f.input :title, label:false,input_html: { class: 'form-control', required:true, :name =>"interest_title"}, placeholder: "Type your interest"	

	= f.submit 'Submit Interest', class: "btn btn-primary" #creates the button to submit